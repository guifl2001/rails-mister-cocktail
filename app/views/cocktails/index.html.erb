    <h1>The <strong>Best</strong> Cocktails <strong>in the world</strong>!</h1>
    <p>You can check the best ones and create yours</p>
  </div>
</div>
<%= link_to "Add a drink", new_cocktail_path, class: "btn btn-ghost" %>
<div class="cards">
<% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?{drinks},{<%=cocktail.name%>})">
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>
<% end %>
</div>
