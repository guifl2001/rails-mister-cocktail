
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/featured/?{drinks},{<%=@cocktail.name%>});">
  <div class="container">
    <h1><%= @cocktail.name  %></h1>
    <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <% end %>
    <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
    <p><%= link_to "Edit cocktail", edit_cocktail_path(@cocktail) %></p>
    <p><%= link_to "Delete cocktail", @cocktail, method: :delete %></p>
  </div>
</div>
